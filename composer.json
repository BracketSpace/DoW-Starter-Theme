{
    "name": "dow/starter-theme",
    "type": "wordpress-theme",
    "description": "DoW Starter Theme",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "composer-runtime-api": "^2.0",
        "hassankhan/config": "^3.0",
        "micropackage/acf-block-creator": "^1.0",
        "micropackage/block-loader": "^1.0",
        "micropackage/classnames": "^1.0",
        "micropackage/dochooks": "^1.0",
        "micropackage/filesystem": "^1.1",
        "micropackage/requirements": "^1.2",
        "micropackage/singleton": "^1.1.1",
        "phpro/grumphp": "^1.5"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "php-stubs/acf-pro-stubs": "^5.10",
        "php-stubs/wordpress-stubs": "*",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpstan/phpstan-strict-rules": "^0.12.7",
        "szepeviktor/phpcs-psr-12-neutron-hybrid-ruleset": "^0.5.0",
        "szepeviktor/phpstan-wordpress": "^0.7.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "DoWStarterTheme\\": "src/classes"
        }
    },
    "scripts": {
        "phpcs": "phpcs -ps --parallel=4 --runtime-set php_version 74000 --ignore=*/vendor/*,*/node_modules/*,*/build/* --extensions=php --colors .",
        "phpcbf": "phpcbf -ps --parallel=4 --runtime-set php_version 74000 --ignore=*/vendor/*,*/node_modules/*,*/build/* --extensions=php --colors .",
        "phpcompat": "phpcs --standard=PHPCompatibility --runtime-set testVersion 7.4  --ignore=*/vendor/*,*/node_modules/*,*/build/* --extensions=php --colors .",
        "phpstan": "phpstan analyze",
        "syntax": "parallel-lint --exclude node_modules --exclude vendor .",
        "test": [
            "@syntax",
            "@phpcompat",
            "@phpstan",
            "@cs"
        ],
        "lint": [
            "@syntax",
            "@phpcompat"
        ]
    }
}
